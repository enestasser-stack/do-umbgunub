<script>
let currentQuestion = 0;

const questions = [
    {
        question: "Quaresma BeÅŸiktaÅŸ'ta hangi numarayÄ± giydi? âš½",
        answer: "7"
    },
    {
        question: "BeÅŸiktaÅŸ'Ä±n efsane teknik direktÃ¶rÃ¼ kimdir? ğŸ–¤ğŸ¤",
        answer: "ÅŸenol gÃ¼neÅŸ"
    },
    {
        question: 7 harfliyim ğŸ’–\nBugÃ¼n doÄŸum gÃ¼nÃ¼m ğŸ‚\nBen kimim?",
        answer: "belinay"
    },
    {
        question: "Portekizli futbolcuyum âš½\nBeÅŸiktaÅŸ'ta oynadÄ±m ğŸ–¤ğŸ¤\nBen kimim?",
        answer: "quaresma"
    },
    {
        question: "Siyah beyaz renklere sahip olan takÄ±m hangisi? ğŸ–¤ğŸ¤",
        answer: "beÅŸiktaÅŸ"
    }
];

function loadQuestion(){
    document.getElementById("question").innerText = questions[currentQuestion].question;
}

function checkAnswer(){
    let value = document.getElementById("answer").value
        .toLowerCase()
        .trim();

    if(value === questions[currentQuestion].answer){
        currentQuestion++;

        if(currentQuestion < questions.length){
            document.getElementById("answer").value = "";
            loadQuestion();
        } else {
            document.getElementById("quiz").style.display = "none";
            document.getElementById("surprise").style.display = "block";
            startFireworks();
            document.getElementById("music").play();
        }
    } else {
        alert("YanlÄ±ÅŸ cevap ğŸ˜… Tekrar dene");
    }
}

loadQuestion();

/* ğŸ† Havai FiÅŸek */

const canvas = document.getElementById("fireworks");
const ctx = canvas.getContext("2d");
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

let particles = [];

function createFirework(){
    let x = Math.random() * canvas.width;
    let y = Math.random() * canvas.height / 2;

    for(let i=0;i<80;i++){
        particles.push({
            x:x,
            y:y,
            speed:Math.random()*5,
            angle:Math.random()*2*Math.PI,
            radius:2,
            life:100
        });
    }
}

function animate(){
    ctx.fillStyle="rgba(0,0,0,0.2)";
    ctx.fillRect(0,0,canvas.width,canvas.height);

    particles.forEach((p,i)=>{
        p.x += Math.cos(p.angle)*p.speed;
        p.y += Math.sin(p.angle)*p.speed;
        p.life--;

        ctx.beginPath();
        ctx.arc(p.x,p.y,p.radius,0,Math.PI*2);
        ctx.fillStyle="hsl("+Math.random()*360+",100%,50%)";
        ctx.fill();

        if(p.life<=0){
            particles.splice(i,1);
        }
    });

    requestAnimationFrame(animate);
}

function startFireworks(){
    setInterval(createFirework,700);
}

animate();
</script>

</body>

</html>

